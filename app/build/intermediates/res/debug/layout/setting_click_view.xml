<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:padding="5dp" >

    <TextView
        android:id="@+id/tv_settingtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_settingdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_settingtitle"
        android:layout_marginTop="3dp"
        android:textColor="#4000"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/jiantou1_pressed"
        android:paddingRight="15dp"
        android:layout_centerVertical="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_alignParentBottom="true"
        android:background="#4000" />

</RelativeLayout><!-- From: file:/D:/工作/mobilesafe/app/src/main/res/layout/setting_click_view.xml -->