<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sharetronic="http://schemas.android.com/apk/res/com.sharetronic.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
 <TextView
        style="@style/TitleTheme"
        android:text= "2.手机卡绑定"   
        />
 <TextView 
     style="@style/ContentStyle"
     android:text="通过绑定SIM卡："
     />
 <TextView 
     style="@style/ContentStyle"
     android:text="下次重启手机，如果发现SIM卡变化，"
     />
 <TextView 
    style="@style/ContentStyle"
     android:text="就会发送报警短信"
     />
    <com.sharetronic.mobilesafetview.SettingItemView 
      android:layout_marginTop="5dp"
      android:id="@+id/siv_sim"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      sharetronic:title="点击sim卡绑定"
      sharetronic:description_on="sim卡已经绑定"
      sharetronic:description_off="sim卡还未绑定"
      ></com.sharetronic.mobilesafetview.SettingItemView> 
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:gravity="center"
     android:orientation="horizontal"
      >
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@android:drawable/presence_invisible" />
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@android:drawable/presence_online" />
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@android:drawable/presence_invisible" />
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@android:drawable/presence_invisible" />
    
 </LinearLayout>
   
   
  <RelativeLayout 
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:layout_weight="1"
       >

       <ImageView
           android:id="@+id/imageView1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_centerVertical="true"
           android:src="@drawable/setup2" />
 <Button
          style = "@style/PreviouStyle"
          />

 <Button
    style = "@style/NextStyle" />

   </RelativeLayout>
</LinearLayout>
